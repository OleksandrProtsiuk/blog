
<!-- Modal -->
<div class="modal fade" id="Reset" tabindex="-1" role="dialog" aria-labelledby="#ResetLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Password reset</h5>
      </div>
      <div class="modal-body">
        <small>Input your email here and check your inbox</small>
      </div>
      <div class="container">
      <div class="form">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          <div class="field">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        <div class="modal-footer">
          <%= f.submit 'Submit', class: "btn btn-outline-dark" %>
        </div>
          <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
