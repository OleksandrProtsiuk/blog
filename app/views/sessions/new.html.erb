<div class="row">
  <div class="col-sm-6">
<h1>Log In</h1>
<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], { :class => 'form-control' } %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <input class="form-control" <%= password_field_tag :password %>
  </div>
  <div>
    <p>&nbsp</p>
  </div>
  <div class="actions"><%= submit_tag "Log In", { :class => 'btn btn-outline-dark'} %></div>
<% end %>
  </div>

  <div class="col-sm-6">
    <p>this is a text about log in and other staff... </p>
  </div>

</div>

