<div class="row">
  <div class="col-sm-6">
<h1>Log In</h1>
<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email], { :class => 'form-control' } %>
  </div>
  <div class="field">
    <%= label_tag :password %><br/>
    <input class="form-control" <%= password_field_tag :password %>
  </div>
  <div>
    <p>&nbsp</p>
  </div>
  <div class="actions"><%= submit_tag "Log In", { :class => 'btn btn-outline-dark'} %></div>
<% end %>
    <div>
      <p>&nbsp</p>
      <p>&nbsp</p>
      <p>&nbsp</p>
    </div>
  </div>

  <div class="col-sm-6">
    <p>To log in input your email an password into form fields<br>
       and press "Log In" button</p>
    <p>If something went wrong try to retype your email and password</p>
    <p>If you forgot your password you can <a data-toggle="modal" href="#Reset">reset</a> it</p>
    <%= render 'sessions/reset' %>
  </div>

</div>

