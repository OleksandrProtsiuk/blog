
<form class="form-inline my-2 my-lg-0">
  <%= form_tag('search/results', method: 'get') do %>
    <div class="field">
      <input class="form-control" <%= text_field_tag :search_field %>
    </div>
    <div>
      <p>&nbsp</p>
    </div>
    <div class="actions">
      <%= submit_tag 'Search',  { :class => 'btn btn-outline-dark' }%>
    </div>
  <% end %>
</form>
<div class="container">
  <div>
    <p>&nbsp</p>
  </div>
  <% if @res %>
<h3>Search results: <%= @res.length %></h3>
<% @res.reverse_each do |post| %>
  <div class="card">
      <h2 class="card-title"><%= link_to post.title, post_path(post) %></h2>
      <div class="card-body">
        <p class="card-text"><%= truncate(post.body.html_safe, length: 350, separator: '>' , :escape => false) %></p>
        <hr>
      </div>
  </div>
<% end %>
  <% else %>
    <div class="notice">
      <P>No results found</P>
    </div>
<% end %>
</div>
