<h1>Tag search results:</h1>
<hr>
<% @post.each do |post| %>
  <h3><%= link_to post.title, post_path(post) %></h3>
  <small>
    Posted by: <%= User.find(post.user_id).username %>, Last update: <%= post.updated_at %>
  </small>
  <p><% post.tag_list.each do |tag| %>
      <%= link_to tag, tagged_path(tag: tag) %>
    <% end %></p>
  <hr>
<% end %>
