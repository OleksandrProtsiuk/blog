<h1><%= @post.title %></h1>

<p><%= @post.body %></p>
<hr>
<%= link_to 'Edit', edit_post_path, :class => 'btn btn-default'  %>
<%= link_to 'Delete', post_path, method: :delete, data: {confirm: 'Are You Sure ?'}, :class => 'btn btn-danger'  %>
<hr>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <div class="container">
    <p><strong><%= comment.username %> : </strong> <%= comment.body %></p>


  </div>
<% end %>

<hr>
<h2>Add New Comment</h2>
<%= form_for([@post, @post.comments.build]) do |f|  %>
  <p>
    Username<br>
    <%= f.text_field(:username, { :class => 'form-control' }) %>
  </p>
  <p>
    Comment<br>
    <%= f.text_area(:body, { :class => 'form-control' }) %>
  </p>
  <p>
    <%= f.submit('Add Comment', { :class => 'btn btn-success' }) %>
  </p>
<% end %>
