<h2>Add  New  Post</h2>
<div class="form">
<%= form_for :post, url: preview_path, method: 'get' do |f|  %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <div class="alert alert-alert"><%= msg %></div>
    <% end %>
  <% end %>

    <div class="field">
      <%= f.label :title %><br/>
      <%= f.text_field :title, { :class => 'form-control' } %>
    </div>
    <div class="field">
      <%= f.label :text %><br/>
      <%= f.text_area :body,  { :class => 'quill_container' } %>
    </div>
    <div class="field">
      <%= f.label :tags %><br />
      <%= f.text_field :tag_list, { :class => 'form-control' }  %>
    </div>
    <div class="field">
      <%= f.hidden_field(:user_id, :value => current_user.id )%>
    </div>
    <div>
      <p>&nbsp</p>
    </div>
    <div class="actions">
      <%= f.submit 'Preview', :class => 'btn btn-outline-dark' %>
    </div>
<% end %>
</div>
